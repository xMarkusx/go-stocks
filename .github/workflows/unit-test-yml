name: Unit Test
run-name: running unit tests
on:
    push:
        branches:
            - 'master'
            - 'feature/**'

jobs:
    Unit-Test
        runs-on: ubuntu-latest
        steps:
          - uses: actions/checkout@v3

          - name: Set up Go
            uses: actions/setup-go@v4
            with:
              go-version: '1.20'

          - name: Test
            run: go test -v ./...
